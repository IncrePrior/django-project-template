{
  "name": "{{ cookiecutter.repo_name }}",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "8.4.1",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-decorators-legacy": "1.3.5",
    "babel-plugin-transform-function-bind": "6.22.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-1": "6.24.1",
    "bootstrap": "4.3.1",
    "css-loader": "1.0.0",
    "extract-css-chunks-webpack-plugin": "3.1.1",
    "file-loader": "1.1.11",
    "node-sass": "4.9.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-loader": "2.1.5",
    "prop-types": "15.6.2",
    "raven-js": "3.26.3",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-redux": "5.0.7",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "resolve-url-loader": "2.3.0",
    "sass-loader": "7.1.0",
    "url-loader": "1.0.1",
    "webpack": "4.17.2",
    "webpack-bundle-tracker": "0.4.0-beta",
    "webpack-cli": "3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "babel-jest": "^23.6.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-import-resolver-webpack": "0.10.1",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "jest": "^23.6.0",
    "jest-dom": "^1.12.0",
    "react-testing-library": "^5.0.1",
    "stylelint": "9.2.0",
    "stylelint-config-standard": "18.2.0"
  },
  "jest": {
    "globals": {
      "NODE_ENV": "test",
      "DJ_CONST": "{}"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "modulePaths": [
      "<rootDir>/app/src",
      "<rootDir>/node_modules"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/app/src/test-setup.js",
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "verbose": true
  },
  "scripts": {
    "dev": "cd app && NODE_ENV=development webpack --config webpack/config.dev.js --watch --progress --profile --color",
    "build": "cd app && NODE_ENV=production webpack -p --config webpack/config.production.js --progress --profile --color",
    "build-quiet": "cd app && NODE_ENV=production webpack -p --config webpack/config.production.js",
    "clean": "cd app && rm -rf build/",
    "prebuild": "npm run clean",
    "lint": "cd app/src && eslint .",
    "stylelint": "cd static/styles-src && stylelint '**/*.scss'",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch"
  }
}
